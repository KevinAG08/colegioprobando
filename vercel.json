{
  "version": 2,
  "functions": {
    "server/index.ts": {
      "runtime": "node@18.x",
      "memory": 1024,
      "maxDuration": 10
    }
  },
  "routes": [
    
    {
      "src": "/(.*)",
      "headers": {
        "Strict-Transport-Security": "max-age=63072000; includeSubDomains; preload"
      },
      "continue": true 
    },
    
    {
      "src": "/(.*)/", 
      "headers": {
        "Location": "$1" 
      },
      "status": 308, 
      "continue": true
    },
    {
      "src": "/(.*)",
      "dest": "/$1",
      "status": 200,
      "continue": true
    },

    {
      "src": "/api/(.*)",
      "dest": "/server/index.ts",
      "methods": ["GET", "POST", "PUT", "DELETE", "PATCH", "OPTIONS"]
    },

    {
      "src": "/(.*)",
      "dest": "/client/$1"
    }
  ]
}